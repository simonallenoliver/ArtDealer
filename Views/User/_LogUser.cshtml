@model LogUser

<form asp-action="LoginUser" asp-controller="User" method="Post">
<h3>Login</h3>
<div class="myFormLines">
    <input asp-for="LogEmail" class=""form-control form-control-lg" type="text" placeholder="Email">
    <span class="text-danger" asp-validation-for="LogEmail"></span>
</div>
<div class="myFormLines"> 
    <input asp-for="LogPassword" class=""form-control form-control-lg" type="password" placeholder="Password">
    <span class="text-danger" asp-validation-for="LogPassword"></span>
</div>
<button>Submit</button>

</form>