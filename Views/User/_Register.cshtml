@model User

<form asp-action="RegisterUser" asp-controller="User" method="Post">
<h3>Register</h3>
<div>
    <label asp-for="FirstName">First Name: </label>
    <input asp-for="FirstName">
    <span class="text-danger" asp-validation-for="FirstName"></span>
</div>
<div>
    <label asp-for="LastName"> Last Name: </label>
    <input asp-for="LastName">
    <span class="text-danger" asp-validation-for="LastName"></span>
</div>
<div>
    <label asp-for="Email">Email Address: </label>
    <input asp-for="Email">
    <span class="text-danger" asp-validation-for="Email"></span>
</div>
<div>
    <label asp-for="Password"> Password: </label>
    <input asp-for="Password">
    <span class="text-danger" asp-validation-for="Password"></span>
</div>
<div>
    <label asp-for="PasswordConfirm">Confirm Password: </label>
    <input type="password" asp-for="PasswordConfirm">
    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
</div>
<button>Submit</button>

</form>